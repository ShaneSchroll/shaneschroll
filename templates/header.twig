<header class="main-site-header">
    <nav class="site-nav">
        <a class="site-nav--text-logo" {% if not is_front_page %}href="/"{% endif %}><strong>Shane Schroll</strong></a>

        <ul class="site-nav--main-menu">
            <li><a href="/about">About</a></li>
            <li><a href="/about#portfolio">Portfolio</a></li>
            <li><a href="/about#tech-stack">Tech Stack</a></li>

            <div class="menu-accent"></div>
        </ul>

        <a class="main-button main-button--outlined" href="/#contact">
            Get In Touch <span class="fa-solid fa-mug-hot icon-right" role="img" aria-label="Contact"></span>
        </a>

        <div id="menu-toggle">
            <span class="x-bar"></span>
            <span class="x-bar"></span>
            <span class="x-bar"></span>
        </div>
    </nav>

    {% if not is_404 %}
        <section id="full-width" class="title-container">
            {% if is_front_page %}
                <div class="title-container__home-inner-wrap">
                    <div class="title-container__home-inner-wrap--title">
                        <div class="split-title">
                            <h1>{{ post.large_title }}</h1>
                            <h2>{{ post.small_title }}</h2>
                        </div>
                        <p>{{ post.intro_text }}</p>
                        <a class="main-button main-button--filled" href="{{ post.button_link_one }}">{{ post.button_text_one }}</a>
                        <a class="main-button main-button--outlined" href="{{ post.button_link_two }}">{{ post.button_text_two }}</a>
                    </div>
                    <img src="{{ TimberImage( post.header_image ).src }}" alt="{{ TimberImage( post.header_image ).alt }}" />
                </div>
            {% else %}
                <div class="title-container__default">
                    <h1 class="small-title">{{ post.small_header }}</h1>
                    <h1>{{ post.header }}</h1>
                </div>
            {% endif %}
        </section>
    {% endif %}
</header>