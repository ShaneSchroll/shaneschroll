{# Contact Details #}

<div class="input-wrap">
    <label for="full-name" class="input-wrap__input">
        Name<br/>
        <span v-if="hasError" class="error">Please enter your name</span>
        <input
            v-model="fullName"
            type="text"
            name="full-name"
            placeholder="John Doe"
            required
        />
    </label>

    <label for="email" class="input-wrap__input">
        Email<br/>
        <span v-if="hasError" class="error">Please enter your email</span>
        <input
            v-model="email"
            type="email"
            name="email"
            placeholder="Email address"
            required
        />
    </label>
</div>

<div class="input-wrap">
    <label for="company-name" class="input-wrap__input">
        Company Name<br/>
        <input
            v-model="companyName"
            type="text"
            name="company-name"
            placeholder="Company Name"
        />
    </label>

    <label for="company-website" class="input-wrap__input">
        Company Website<br/>
        <input
            v-model="companyWebsite"
            type="url"
            name="company-website"
            pattern="https://.*"
            placeholder="Company Website"
        />
    </label>
</div>