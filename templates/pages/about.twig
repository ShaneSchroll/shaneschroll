{% extends 'base.twig' %}

{% block content %}
<section class="about-content-block">

    <span id="tech-stack"></span>
    <div id="sphere-container">
        <canvas id="sphere-canvas" width="600" height="600"></canvas>
        <p>Use your mouse to manually rotate the sphere or click on icons to bring them to the front.
            <br/>You can also use your mouse wheel to zoom in/out.
        </p>

        <div id="sphere-tags">
            <ul>
                {% for lang in post.get_field('language_icons') %}
                    <li><a href="#">
                        <img
                            class="lang-icon"
                            src="{{ TimberImage( lang.icon ).src }}"
                            alt="{{ TimberImage( lang.icon ).alt }}"
                            title="{{ lang.name }}"
                        />
                    </a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <span id="search-feature"></span>
    <section id="full-width" class="search-feature">
        <div class="search-feature__inner-wrap">
            <h1>Search and Filter Examples</h1>

            <div class=""></div>
        </div>
    </section>
</section>
{% endblock %}